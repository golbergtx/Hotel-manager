<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
	      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="/css/main.css">
	<link rel="stylesheet" href="/css/guest.css">
	<title>Guests</title>
</head>
<body>
<article>
	<input type="text" v-model="nameFilter" class="filter-input" placeholder="Имя">

	<div v-for="(guest, index) in displayedGuests">
		<span v-text="guest.firstName"></span>
		<span v-text="guest.lastName"></span>
		<span v-text="guest.phone"></span>
		<span v-text="guest.address"></span>
		<span v-text="guest.passportDetails"></span>
		<span v-text="guest.dateOfBirth"></span>
		<button class="edit-guest-btn" @click="editGuest(index)">Редактировать</button>
		<button class="delete-guest-btn" @click="deleteGuest(index)">Удалить</button>
	</div>

	<button class="add-guest-btn" @click="createGuest">Добавить</button>

	<div class="guest-popup" v-show="openedGuestPopup">
		<div>
			<label for="">Имя</label>
			<input type="text" v-model="guest.firstName">
		</div>
		<div>
			<label for="">Фамилия</label>
			<input type="text" v-model="guest.lastName">
		</div>
		<div>
			<label for="">Номер тефона</label>
			<input type="text" v-model="guest.phone">
		</div>
		<div>
			<label for="">Адрес</label>
			<input type="text" v-model="guest.address">
		</div>
		<div>
			<label for="">Паспорт</label>
			<input type="text" v-model="guest.passportDetails">
		</div>
		<div>
			<label for="">Дата рождения</label>
			<input type="date" v-model="guest.dateOfBirth">
		</div>

		<button class="save-new-guest-data-btn" @click="saveGuestData">Сохранить</button>
		<button class="close-edit-popup-btn" @click="closeGuestPopup">Закрыть</button>
	</div>

</article>
<script src="/js/vue.js"></script>
<script type="module" src="/js/guest-page.js"></script>
</body>
</html>