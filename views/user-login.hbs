<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
	      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="/css/main.css">
	<link rel="stylesheet" href="/css/user-login.css">
	<title>Login</title>
</head>
<body>
<div class="login-form-wrapper">
	<div class="login-header-wrapper">
		<p class="login-header">Авторизация</p>
	</div>
	<form id="loginForm" @submit.prevent="submit" action="#" method="post" class="login-form">
		<p v-if="showErrorLoginMessage" class="error-login">Неверный логин или пароль!</p>
		<input type="text" v-model="login" class="login-input" placeholder="Логин" required>
		<input type="password" v-model="password" class="login-input login-input-pass" placeholder="Пароль" required>
		<button type="submit" class="login-btn">Войти</button>
	</form>
	<div class="login-footer-wrapper">
		<a class="login-footer-text1" href="/user-registration">Регистрация</a>
	</div>
</div>
<script src="/js/vue.js"></script>
<script src="/js/user-login-page.js"></script>
</body>
</html>